<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/calculatorScreen"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@android:color/white"
        android:fontFamily="@font/arvo_bold"
        android:gravity="center|right"
        android:textColor="#241E4E"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/del"
            android:text ="DEL"
            android:fontFamily="@font/arvo_bold"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:textColor="#241E4E"/>


        <Button
            android:id="@+id/clear"
            android:fontFamily="@font/arvo_bold"
            android:text ="CE"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:textColor="#241E4E"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/n7"
            android:text ="7"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:fontFamily="@font/arvo_bold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n8"
            android:text ="8"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/arvo_bold"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n9"
            android:text ="9"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:fontFamily="@font/arvo_bold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/division"
            android:text ="/"
            android:textSize="25sp"
            android:fontFamily="@font/arvo_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/n4"
            android:text ="4"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/arvo_bold"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n5"
            android:text ="5"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:fontFamily="@font/arvo_bold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n6"
            android:text ="6"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/arvo_bold"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/multiplication"
            android:text ="*"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:fontFamily="@font/arvo_bold"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/n1"
            android:text ="1"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/arvo_bold"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n2"
            android:text ="2"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/arvo_bold"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n3"
            android:text ="3"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:fontFamily="@font/arvo_bold"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/subtraction"
            android:text ="-"
            android:textSize="25sp"
            android:fontFamily="@font/arvo_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        android:fontFamily="@font/arvo_bold"
        <Button
            android:id="@+id/dot"
            android:text ="."
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:fontFamily="@font/arvo_bold"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/n0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:fontFamily="@font/arvo_bold"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/equals"
            android:text ="="
            android:textSize="25sp"
            android:fontFamily="@font/arvo_bold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/addition"
            android:text ="+"
            android:textSize="25sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#241E4E"
            android:fontFamily="@font/arvo_bold"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>