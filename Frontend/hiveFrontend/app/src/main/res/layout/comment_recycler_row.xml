<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewComment"
        android:layout_width="403dp"
        android:layout_height="72dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textAlignment="viewStart"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/commentLayout"
            android:layout_width="383dp"

            android:layout_height="75dp"
            app:layout_constraintBottom_toBottomOf="@+id/postContentComment">

            <TextView
                android:id="@+id/userDisplayNameComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"
                android:text="User display name"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></TextView>

            <TextView
                android:id="@+id/userNameComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="30dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text=" User name"
                android:textAlignment="viewStart"
                android:textColor="#C5C5C5"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/postContentComment"
                app:layout_constraintStart_toEndOf="@+id/userDisplayNameComment"></TextView>

            <TextView
                android:id="@+id/postContentComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/helveticaneuelight"
                android:text="Post Content"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/userDisplayNameComment"></TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>